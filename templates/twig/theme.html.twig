{% use 'tailwind_2_layout.html.twig' %}

{%- block form_label -%}
    {%- set label_attr = label_attr|merge({class: ((label_attr.class|default('')) ~ ' block text-sm font-semibold cursor-pointer mb-2 dark:text-white')|trim}) -%}
    {{- parent() -}}
{%- endblock -%}

{% block form_widget_simple -%}
    {%- if type is not defined or type != 'hidden' %}
        {%- set widget_class = ' py-3 px-4 block w-full bg-gray-100 border-transparent rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 focus-visible:outline focus-visible:outline-blue-600 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-700 dark:border-transparent dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600 dark:focus-visible:ring-neutral-600' %}
        {%- set attr = attr|merge({class: ((attr.class|default('')) ~ widget_class)|trim}) -%}
    {% endif -%}
    {{- parent() -}}
{%- endblock %}

{%- block choice_widget_collapsed -%}
    {%- set attr = attr|merge({class: 'py-3 px-4 pe-9 block w-full bg-gray-100 border-transparent rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-700 dark:border-transparent dark:text-neutral-400 dark:focus:ring-neutral-600'}) -%}
    {{- parent() -}}
{%- endblock -%}

{%- block form_row -%}
    {%- set row_attr = row_attr|merge({class: row_attr.class|default(row_class|default('mb-4'))}) -%}
    {{- parent() -}}
{%- endblock -%}
