{% props size='default', variant='solid', color='blue' %}

{# https://symfony.com/bundles/ux-twig-component/current/index.html#cva-and-tailwind-css #}
{% set className = cva({
    base: 'inline-flex items-center justify-center gap-x-2 text-sm rounded-lg border cursor-pointer focus:outline-none disabled:pointer-events-none',
    variants: {
        size: {
            small: 'py-2 px-3',
            default: 'py-3 px-4',
            large: 'p-4 sm:p-5'
        }
    },
    compoundVariants: [
        {
            variant: ['solid'],
            color: ['blue'],
            class: 'border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:bg-blue-700 disabled:opacity-50'
        },
        {
            variant: ['outline'],
            color: ['blue'],
            class: 'border-gray-200 text-gray-500 hover:border-blue-600 hover:text-blue-600 focus:border-blue-600 focus:text-blue-600 disabled:opacity-50 dark:border-neutral-700 dark:text-neutral-400 dark:hover:text-blue-500 dark:hover:border-blue-600 dark:focus:text-blue-500 dark:focus:border-blue-600'
        },
        {
            variant: ['ghost'],
            color: ['blue'],
            class: 'border-transparent text-blue-600 hover:bg-blue-100 hover:text-blue-800 focus:bg-blue-100 focus:text-blue-800 disabled:opacity-50 dark:text-blue-500 dark:hover:bg-blue-800/30 dark:hover:text-blue-400 dark:focus:bg-blue-800/30 dark:focus:text-blue-400'
        },
        {
            variant: ['soft'],
            color: ['blue'],
            class: 'border-transparent bg-blue-100 text-blue-800 hover:bg-blue-200 focus:bg-blue-200 disabled:opacity-50 dark:text-blue-400 dark:hover:bg-blue-900 dark:focus:bg-blue-900'
        }
    ]
}) %}

{% block element %}
    {# https://symfony.com/bundles/ux-twig-component/current/index.html#component-attributes #}
    <button {{ attributes.without('class') }} class="{{ className.apply({size, variant, color}, attributes.render('class'))|tailwind_merge }}">
        {% block content %}{% endblock %}
    </button>
{% endblock %}
